<% const price = 'price' %>
<% const name = '書家 田中彩音'%>
<!DOCTYPE html>
<html class="no-js" lang="ja">
    <%- include('./_partial/head', {meta: config.data.pageMeta[price]}); %>
<body>
    <div class="line"></div>
    <div class="top"></div>
    <div class="bottom"></div>
    <div class="bar"></div>
    <div class="top-content top-content-news page-load">
        <h1 class="title">お知らせ</h1>
    </div>
    <%- include('./_partial/header') %>
    <div class="wrapper bg-img1">
        <div class="scroll-fadeup">
            <a class="news scroll-fadeleft" href="#">
                <img src="../../dist/images/img16.jpeg" alt="" width="200" height="200">
                <div class="news-text">
                    <h2>朝日経済新聞に個展の記事が掲載されました！</h2>
                    <p class="news-time">2020.10.03</p>
